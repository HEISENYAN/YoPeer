<!--pages/check-out-page/check-out-page.wxml-->

<scroll-view class="scroll-area" type="list" scroll-y>
  <view class="intro">欢迎来到YoPeer港校新生团购活动🐱</view>

  <van-cell-group inset class="unit-area">
    <van-cell title="港校新生团购结算"/>
    <block wx:for = "{{checkOutInfo}}" wx:key = "checkOutKey" wx:for-item = "checkOutItem">
      <van-cell title="{{checkOutItem.prodName}}" value="¥{{checkOutItem.price * checkOutItem.selectedNum}}" label="件数：{{checkOutItem.selectedNum}}" />
    </block>
    <!--
    <van-cell title="牙刷" value="¥40" label="件数：2" />
    <van-cell title="床单" value="¥60" label="件数：1" />
    <van-cell title="潘哥" value="¥0.1" label="件数：99" />
    <van-cell title="应付款：" value="¥99" size="large" />
    <van-cell title="配送费：" value="¥15" size="small" />
    -->
    
    <van-cell title="实付款：" value="¥{{checkOutPrice}}" size="large" />
  </van-cell-group>

  <van-cell-group inset class="unit-area2">
    <van-cell title="优惠券" is-link value="" />
  </van-cell-group>

  <van-cell-group inset class="unit-area3">
    <van-cell title="备注" is-link value="" />
  </van-cell-group>

  <!--增加的Margin抵消底部bar占用宽度-->
  <view style = "height: {{offsetMargin}}px; width:100%;background-color: #B9BCDF;" ></view>

  <van-submit-bar
    price="{{ checkOutPrice*100 }}"
    button-text="下一步"
    bind:submit="onClickButton"
    tip="{{ true }}"
    id = "subBar"
  >
  <!--
    <van-tag type="primary"></van-tag>
    <view slot="tip">您的收货地址为：香港大学 <text>修改地址</text></view>
  -->
    
  </van-submit-bar>
  
</scroll-view>

