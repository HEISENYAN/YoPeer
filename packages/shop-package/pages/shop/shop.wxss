.scroll-view{width:100%;height:100%;overflow: hidden;}
.scroll-view-list{width:100%;height:100%;}
.scroll-view-item{
  height:100rpx;width:100%;
  color: grey;
  font-size:27rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  font-weight:300}
.scroll-view-item:after{
  content:'';
  left:0;
  right:0;
  bottom:0;
  height:2rpx;
  font-weight: 400;
  background-color:#fff;
  transform:scaleY(.5);
  position:absolute
}
.scroll-view-item.active{
  /* background:#665b99; */
  color:black;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.scroll-view-item.active::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8%; /* 左边的十分之一 */
  height: 100%;
  background-color: #B9BCDF;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  z-index: -1; /* 确保伪元素位于文字后面 */
}

