/* pages/shop/shop.wxss */
.menu-page{
  display:flex;
  width:100%;
  position:fixed;
  bottom:0rpx;
  left:0;
  top:0rpx;
  overflow:hidden;
  flex-direction:column;
  height: 100%;
  z-index: 0;
}
.navigationBar{position:relative;top:0;height:300rpx;width:100%;}
.overflow{overflow: hidden;text-overflow: ellipsis;white-space: nowrap;width: 100%;}
.menu-content{display:flex; width:100%;position: relative;bottom:0rpx;left:0;top:0rpx;overflow:hidden;height:100%;}
.menu-container{width:120rpx;flex:0 0 25%;background:#fff;}
.scroll-view{width:100%;height:100%;overflow: hidden;}
.scroll-view-list{width:100%;height:100%;}
.scroll-view-item{
  height:100rpx;width:100%;
  font-size:30rpx;
  color:rgb(170, 170, 170);
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  font-weight:700}
.scroll-view-item:after{
  content:'';
  left:0;
  right:0;
  bottom:0;
  height:2rpx;
  background-color:#fff;
  transform:scaleY(.5);
  position:absolute
}
.scroll-view-item.active{
  background:rgb(245, 243, 243);
  color:#000;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}



.item-list{
  background-color: white;
  height:100%;
  width:100%;

}
.swiper-view-item{
  
  display:flex;
  height:200rpx;
  background-color:#fff;
  padding:0;
}
.view-item-photo{
  height: 180rpx;
  width:  280rpx;
  padding:0 5%;
  border-radius: 20rpx;
}
.view-item-text{
  padding:10rpx 0rpx 0rpx 0rpx;
  line-height:40rpx;
  display:block;
  text-overflow:ellipsis;
  word-wrap:break-word;
}
.product-title{
  color:#333;
  font-size:34rpx;
  line-height:40rpx;}
.header {
  height: 55rpx;
  background-color: rgb(255, 255, 255);
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
.box{
  display:inline-block;
  margin-right: 50rpx;
  margin-left: 50rpx;
}
.cart-bar{
  width:750rpx;
  height: 150rpx;
  display:inline-box;
  background-color: white;
  
}
.cart-icon{
  height:100%;
  width:100rpx;
  padding: 20rpx 40rpx;
  display: inline-block;
}
.cart-price{
  height:100%;
  width:300rpx;
  font-size: 35rpx;
  padding: 30rpx 0;
  display: inline-block;
  color:rgb(233, 47, 47);
}
.check-out-button{
  height:100%;
  width:350rpx;
  display: inline-block;
  padding: 17rpx 160rpx;
}
.theButton{
  width: 150rpx;
  height: 80rpx;
  display:block;
  background-color: rgb(193, 153, 226);
  border-radius: 10rpx;
  text-align: center;
  padding: 13rpx 0;
  font-weight: bold;
  color:#fff;
}
.cart-tab{
  display: inline-block;
  background-color:white;
  height:100%;
  width:100%;
}
.cross-button{
  display: inline-block;
  height:100%;
  width: 100rpx;
  padding: 0 50rpx;
}
.clear-button{
  display: inline-block;
  height: 100%;
  width: 650rpx;
  padding: 5rpx -500rpx 0 0;
  color : rgb(0, 0, 255)
}
.cart{
  height : 10%;
  width: 100%;
  display: flex;
  flex-shrink: 0;
  justify-content: center;
  display: inline-block;
}
.mask{
  position: absolute;
  top:0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 1;
  background-color: rgba(0,0,0,0.7);
}
