
<!--pages/shop/shop.wxml-->



<view class = "menu-page">
  <!--顶部返回按钮-->
  <return-button></return-button>

  <image style="width: 750rpx; height: 300rpx; background-color: #eeeeee;" src="https://i.postimg.cc/cHj6NRKT/shopping-head.png" bindtap = "returnPage"></image>
  <!--左侧一级菜单-->
  <view class = "menu-content">   
    <view class = "menu-container">
      <scroll-view class = "scroll-view" type = "list" >
        <view class = "scorll-view-list">
          <block wx:for ="{{YPproduct}}" wx:for-item = "item" wx:key = "index">
            <view class="scroll-view-item {{indexSize === index?'active':''}}" bindtap="chooseTypes" data-nowindex="{{index}}">{{item.classification}}</view>
          </block>
        </view>
      </scroll-view>
    </view>
  
  <!--右侧二级菜单-->
    <scroll-view scroll-y style="width: 100%; height: 100%; background-color:white;" type="custom" scroll-into-view="{{scrollIntoView}}"  bindscroll ="scrollDetection">
      <sticky-section wx:for="{{YPproduct}}" wx:key = "index" wx:for-item = "item" >
        <sticky-header>
          <view class="header" id = "menuIndex{{index}}">{{item.classification}}</view>
        </sticky-header>
        <list-view class = "item-list">
          <view class="swiper-view-item" wx:for="{{item.items}}" bindtap="chooseSecondMenu" wx:key="prodIndex" wx:for-item="prodItem"> 

            <view class="item-container">
              <view class="image-container">
                <image class="view-item-photo" src = "https://images.pexels.com/photos/2536965/pexels-photo-2536965.jpeg" data-selected="{{prodItem}}" hover-class="this-check"></image>
              </view>

              <view class="text-container" data-selected="{{prodItem}}" hover-class="this-check">
                <view class="view-item-text overflow"></view>
                <text class="product-title" data-selected="{{prodItem}}" >{{prodItem.prodName}}</text>
                <!--<text style="font-size:23rpx;;color:gray;display:block;text-overflow:ellipsis;white-space:pre-line;line-height:40rpx" data-cid="{{prodItem.id}}" data-cname="{{prodItem.name}}">{{prodItem.introduction}}</text> -->
                <text style="font-size:23rpx;color:gray;display:block;white-space:pre-line;text-overflow:ellipsis;white-space:pre-line;line-height:30rpx" data-selected="{{prodItem}}">已售：{{prodItem.soldNum}}</text>
                <view style="font-size:30rpx;color:black;padding:30rpx 0 0 100rpx;;display:inline-block" data-selected="{{prodItem}}"></view>
            </view>                                                                        <view class="number-container">
                  <view style="font-size:34rpx;color:red;padding:30rpx 0 0 0;display:inline-block" data-selected="{{prodItem}}">￥{{prodItem.price}}</view>
                </view>
            </view>                                                                   
          </view>
        </list-view>
      </sticky-section>
    </scroll-view>
  </view>
    
  <!--底部购物车-->
  <view style = "z-index: 2; position:relative">
    <mp-half-screen screenHeight = "40" id = "shoppingCart" style = "z-index:10000" bindtouchend = "moveCart">
      <view slot = "tab" class = "cart-bar" bindtap = "openCart">
        <view class = "cart-icon"> <sky-icon icon-name = "shopping-cart" icon-size = "50"></sky-icon></view>
        <view class = "cart-price">￥{{selectedTotalPrice}}</view>
        <view class = "check-out-button" > <view class= "theButton" catchtap = "checkOut">去结算</view></view>
      </view>
      <view slot = "tabTitle" class = "cart-tab">
        <view class = "cross-button" catchtap = "closeCart"> <sky-icon icon-name = "x" icon-size = "45" iconColor = "var(--low-chroma-l0)" >   </sky-icon> </view>
        <view class = "clear-button"> <text> 清除</text> </view>
      </view>
      <view slot = "item">
        <view class="swiper-view-item" wx:for="{{[1,2,3,4]}}" wx:key="prodIndex" wx:for-item="prodItem"> 
          <view class="view-item-photo" >
            <image src = "" style ="height:90%;width:90%;" data-cid="{{prodItem.id}}" data-cname="{{prodItem.name}}"  hover-class="this-check"></image></view>
            <view class="view-item-text overflow"  hover-class="this-check">
            <text class="product-title">物品{{prodItem}}</text>
            <view style="font-size:34rpx;color:red;padding:30rpx 0 0 0;display:inline-block" data-cid="{{prodItem.id}}" data-cname="{{prodItem.name}}">￥999</view>
          </view>
        </view>
      </view>
    </mp-half-screen>
  </view>

  <!--背景半透明黑色蒙版-->
  <view class = "mask" wx:if="{{ifMaskOn}}" bindtap = "closeCart"></view>  
</view>


