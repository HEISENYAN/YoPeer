
.swiper-container {
  width: 100%;
  height: 40vh;
  display:block
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  width: 720rpx;
  padding:30rpx 0 30rpx 30rpx;
   /* min-height: 300rpx;设置最小高度 */
  background: linear-gradient(45deg, rgb(228, 215, 240), rgb(187, 197, 232)); /* 渐变背景颜色 */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: -20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
  overflow: hidden;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 10rpx;
}

.product-price {
  font-size: 32rpx;
  color:hotpink;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.product-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.product-specs {
  width: 720rpx;
  padding:30rpx 0 30rpx 30rpx;
  /* background: linear-gradient(45deg, rgb(228, 215, 240), rgb(187, 197, 232)); 渐变背景颜色 */
  background-color:rgb(245, 229, 200);
  margin-top: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.spec-title {
  font-size: 32rpx;
  margin-bottom: 10rpx;
  padding: 0 0 0 10rpx
}
.order-bar{
  display: block;
  position: fixed;
  bottom: 20rpx;
  height: 10vh;
  width: 100vw;
  background-color: white;
  z-index: 99;
  padding:0
}
.order-num-selection{
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  width: 40%;
  background-color: white;
  position: relative;
  vertical-align:top;
  padding: 1vh 0 0 40rpx
}
.button-container{
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  width: 60%;
  background-color: white;
  vertical-align:top;
  padding: 1vh 0 0 8vw
}
.operation-button{
  display:inline-flex;
  height:20px;
  width:20px;
  background-color: wheat;
  border-radius: 5px;
  justify-content: center; 
  align-items: center;
  font-size: 20px;
  margin:10px
}
.num-selection{
  display:inline-flex;
  height:20px;
  width:40px;
  background-color: white;
  justify-content: center;
  align-items: center;
  font-size: 17px;
}

.buy-button {
  
  width: 300rpx;
  height: 80rpx;
  display:inline-block;
  background-color: rgb(193, 153, 226);
  border-radius: 10rpx;
  text-align: center;
  font-weight: bold;
  color:#fff;
  margin-left: 20rpx;
}
.bottom-margin{
  height: 20vh;
  width: 750rpx;
  background-color: white;
}
.radio-group{
  display:inline-block;
}
.radio{
  display:inline-block;
  padding: 0 0 0 10rpx
}

.safe-area{
  display:inline-block;
  display: block;
  position: fixed;
  bottom: 0;
  height: 20rpx;
  width: 100vw;
  background-color: white;
  z-index: 99;
}