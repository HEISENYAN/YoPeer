Page{
  background-color: rgb(241,241,241);
}
.swiper-container {
  width: 100%;
  height: 35vh;
  display:block
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  width: 720rpx;
  padding:30rpx 0 30rpx 30rpx;
   /* min-height: 300rpx;设置最小高度 */
  background-color: #B9BCDF;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: -20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
  overflow: hidden;
}

.cell-title{
  font-size: 35rpx !important;
  font-weight: 400 !important;
}

.cell-value{
  color: palevioletred !important;
  font-size: 45rpx !important;
  font-weight: 400 !important;
}

.little-tag{
  margin-top: 20rpx !important;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.product-price {
  font-size: 32rpx;
  color: red;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.product-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.product-specs {
  width: 720rpx;
  padding:30rpx 0 30rpx 30rpx;
  /* background: linear-gradient(45deg, rgb(228, 215, 240), rgb(187, 197, 232)); 渐变背景颜色 */
  margin-top: 20rpx;
}

.spec-title {
  font-size: 27rpx;
  margin-bottom: 10rpx;
  padding: 0 0 0 10rpx
}
.order-bar{
  display: block;
  position: fixed;
  bottom: 20rpx;
  height: 10vh;
  width: 100vw;
  background-color: white;
  z-index: 99;
  padding:0
}
.order-num-selection{
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  width: 40%;
  background-color: white;
  position: relative;
  vertical-align:top;
  padding: 1vh 0 0 40rpx
}
.button-container{
  display: inline-block;
  box-sizing: border-box;
  height: 100%;
  width: 60%;
  background-color: white;
  vertical-align:top;
  padding: 1vh 0 0 8vw
}
.operation-button{
  display:inline-flex;
  height:20px;
  width:20px;
  background-color: #e4e4e4;
  border-radius: 5px;
  justify-content: center; 
  align-items: center;
  font-size: 20px;
  margin:10px
}
.num-selection{
  display:inline-flex;
  height:20px;
  width:40px;
  background-color: white;
  justify-content: center;
  align-items: center;
  font-size: 17px;
}

.buy-button {
  
  width: 300rpx;
  height: 80rpx;
  display:inline-block;
  background-color: #8a91e0 ;
  border-radius: 10rpx;
  text-align: center;
  font-weight: bold;
  color:#fff;
  margin-left: 20rpx;
}
.bottom-margin{
  height: 10vh;
  width: 750rpx;
  background-color: rgb(241,241,241);
}
.radio-group{
  display:inline-block;
}
.radio{
  display:inline-block;
  padding: 0 0 0 10rpx
}

.safe-area{
  display:inline-block;
  display: block;
  position: fixed;
  bottom: 0;
  height: 20rpx;
  width: 100vw;
  background-color: white;
  z-index: 99;
}
.introduction-image-container{
  width:100vw;
  height:auto;
  box-sizing: border-box;
  background-color: white;
  display: flex;
  flex-direction: column;
}
.option-container{
  width:100vw;
  margin-top: 1vh;
  margin-bottom: 1vh;
  height:auto;
  box-sizing: border-box;
  padding:20rpx;
  background-color: white;
}