.container {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
}

.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
}

.icon-back {
  font-size: 36rpx;
  color: #333;
}

.swiper-container {
  width: 100%;
  height: 50vh;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  width: 80%;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: -20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 0;
}

.product-price {
  font-size: 32rpx;
  color: #e60012;
  margin-bottom: 10rpx;
}

.product-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.product-specs {
  width: 80%;
  padding: 20rpx;
  background-color: #fff;
  margin-top: 15rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.spec-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.buy-button-container {
  padding: 10rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.buy-button {
    width: 150rpx;
    height: 80rpx;
    display:block;
    background-color: rgb(193, 153, 226);
    border-radius: 10rpx;
    text-align: center;
    font-weight: bold;
    color:#fff;
}
