.container {
  display: flex;
  flex-direction: column;
  background-color: #f8f8f8;
  justify-content: flex-start;
  align-content: flex-start
}

.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 10;
}

.icon-back {
  font-size: 36rpx;
  color: #333;
}

.swiper-container {
  width: 100%;
  height: 50vh;
  display:block
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  width: 90%;
  min-height: 300rpx; /* 设置最小高度 */
  background: linear-gradient(45deg, rgb(228, 215, 240), rgb(187, 197, 232)); /* 渐变背景颜色 */
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: -20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
  overflow: hidden;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin: 10rpx 10rpx;
}

.product-price {
  font-size: 32rpx;
  color:hotpink;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.product-description {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.product-specs {
  width: 90%;
  padding: 30rpx;
  /* background: linear-gradient(45deg, rgb(228, 215, 240), rgb(187, 197, 232)); 渐变背景颜色 */
  background-color:rgb(245, 229, 200);
  margin-top: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1); /* 添加阴影 */
}

.spec-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.buy-button {
    margin-top: 40%;
    width: 150rpx;
    height: 80rpx;
    display:block;
    background-color: rgb(193, 153, 226);
    border-radius: 10rpx;
    text-align: center;
    font-weight: bold;
    color:#fff;
}
