<view class="product-specs" wx:for="{{selectedProduct.optionName}}" wx:key="wholeOption" wx:for-index="option" wx:for-item="optionName">
  <view class="spec-title">{{optionName}}</view>
  <van-radio-group value="{{selectedOptions[option]}}" bind:change="onRadioChange" data-option="{{option}}">
    <van-cell-group>
      <van-cell 
        wx:for="{{selectedProduct.options[option]}}" 
        wx:key="specOption" 
        wx:for-index="optionIndex" 
        wx:for-item="optionItem" 
        title="{{optionItem}}" 
        clickable 
        data-name="{{optionIndex}}" 
        data-option="{{option}}" 
        bind:click="onRadioCellClick"
      >
        <van-radio 
          slot="right-icon" 
          name="{{optionIndex}}" 
          checked="{{optionIndex == selectedOptions[option]}}" 
        />
      </van-cell>
    </van-cell-group>
  </van-radio-group>
</view>




