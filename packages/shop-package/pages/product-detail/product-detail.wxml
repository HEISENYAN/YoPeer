<view class="container">
  <!-- 返回按钮 -->
  <view class="back-button" bindtap="goBack">
    <text class="icon-back">←</text>
  </view>
  
  <!-- 上半部分：横向滑动图片 -->
  <swiper class="swiper-container" autoplay="true" interval="3000" duration="500" indicator-dots="true">
    <block wx:for="{{product.images}}" wx:key="index">
      <swiper-item>
        <image class="swiper-image" src="{{item}}" mode="aspectFill"></image>
      </swiper-item>
    </block>
  </swiper>

  <!-- 下半部分：商品信息 -->
  <view class="product-info">
    <view class="product-name">{{product.name}}</view>
    <view class="product-price">￥{{product.price}}</view>
    <view class="product-description">{{product.description}}</view>
  </view>

  <!-- 规格选择 -->
  <view class="product-specs">
    <view class="spec-title">选择规格</view>
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <view class="picker">
        当前选择：{{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}
      </view>
    </picker>
  </view>

  <!-- 购买按钮 -->
  <view class="buy-button-container">
    <button class="buy-button" bindtap="addToCart">购买</button>
  </view>
</view>
