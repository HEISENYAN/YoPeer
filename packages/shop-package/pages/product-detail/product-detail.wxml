  <!-- 规格选择 -->
<view class="product-specs" wx:for = "{{selectedProduct.optionName}}" wx:key = "wholeOption" wx:for-index = "option" wx:for-item = "optionName">
  <view class="spec-title">{{optionName}}</view>
  <radio-group class="radio-group" bindchange="radioChange" data-option = "{{option}}">
    <label class="radio" wx:for="{{selectedProduct.options[option]}}" wx:key = "specOption" wx:for-index = "optionIndex" wx:for-item = "optionItem">
        {{optionItem}}
        <radio value="{{optionIndex}}" checked="{{optionIndex == 0}}" color = "rgb(193, 153, 226)"/>
    </label>
  </radio-group>

</view>

<!-- 加入购物车 -->
<view class = "order-bar">
  <view class = "order-num-selection">
    <view class = "operation-button" bindtap = "onSub">-</view>
    <view class = "num-selection">{{selectedNum}}</view>
    <view class = "operation-button" bindtap = "onAdd">+</view>
  </view>
  <view class = "button-container">
    <!-- 购买按钮 -->
    <button class="buy-button" bindtap="addToCart">购买</button>
  </view>
</view>

