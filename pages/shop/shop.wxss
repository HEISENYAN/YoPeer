/* pages/shop/shop.wxss */
.menu-page{display:flex;width:100%;position:fixed;bottom:0rpx;left:0;top:0rpx;overflow:hidden;flex-direction:column;height:100hv}
.navigationBar{position:relative;top:0;height:300rpx;width:100%;}
.overflow{overflow: hidden;text-overflow: ellipsis;white-space: nowrap;width: 100%;}
.menu-content{display:flex; width:100%;position: relative;bottom:0rpx;left:0;top:0rpx;overflow:hidden;height:100%;}
.menu-container{width:120rpx;flex:0 0 25%;background:#fff;}
.scroll-view{width:100%;height:100%;overflow: hidden;}
.scroll-view-list{width:100%;height:100%;}
.scroll-view-item{
  height:100rpx;width:100%;
  font-size:30rpx;
  color:rgb(170, 170, 170);
  display:flex;
  align-items:center;
  justify-content:center;
  position:relative;
  font-weight:700}
.scroll-view-item:after{
  content:'';
  left:0;
  right:0;
  bottom:0;
  height:2rpx;
  background-color:#fff;
  transform:scaleY(.5);
  position:absolute
}
.scroll-view-item.active{
  background:rgb(245, 243, 243);
  color:#000;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}



.item-list{
  background-color: white;
  height:100%;
  width:100%;

}
.swiper-view-item{
  
  display:flex;
  height:200rpx;
  background-color:#fff;
  padding:0;
}
.view-item-photo{
  height: 180rpx;
  width:  280rpx;
  padding:0 5%;
  border-radius: 20rpx;
}
.view-item-text{
  padding:10rpx 0rpx 0rpx 0rpx;
  line-height:40rpx;
  display:block;
  text-overflow:ellipsis;
  word-wrap:break-word;
}
.product-title{
  color:#333;
  font-size:38rpx;
  line-height:40rpx;}
.header {
  height: 55rpx;
  background-color: rgb(255, 255, 255);
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
}

.cart-bar{
  width:100%;
  height: 150rpx;
  display:inline-box;
}
.cart-icon{
  display: inline-block;
}
.check-out-button{

  display: inline-block;
}
.cart{
  height : 10%;
  width: 100%;
  display: flex;
  flex-shrink: 0;
  justify-content: center;
  display: inline-block;
}