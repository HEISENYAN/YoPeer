
<scroll-view class = "main-page" type = "custom" scroll-y="true">
  <!--顶部状态栏-->
  <!-- <view class = "top-margin" style = "height:{{statusBarHeight}}px"> </view> -->
  <view style = "position: relative; width:100%;height:33vh;">
    <!-- <view class = "navigation-bar">welcome to YoPeer</view> -->
    <view class = "swiper-container">
      <t-swiper 
        current="{{1}}"
        autoplay="{{true}}"
        duration="{{500}}"
        interval="{{5000}}"
        list="{{swiperList}}"
        height = "25vh"
        navigation="{{ { type: 'dots-bar' } }}"
        class = "notice-swiper"
        bind:click = "onClickSwiper"
      />
    </view>
    <view class="notice-bar">
      <view class="user-info">
        <image src="{{userInfo.avatar}}" class="avatar" />
        <text>{{userInfo.name}}</text>
        <text>{{userInfo.university}}</text>
      </view>
      <view class="separator"></view>
      <view class="level-exp">
        <text>我的鱼饼等级：</text> 
        <text style="color: #fcad37;">{{userInfo.level}}</text>
        <view class="exp-bar-container">
          <view class="exp-bar" style="width: {{userInfo.exp}}%;"></view>
        </view>
        <text class="levelExpRmd">距离下一级还有：200</text>
      </view>
    </view>
  </view>
  
  <view class="subTitle">2024港校新生团购活动</view>
  <image class = "activity-cell-head" bindtap = "onSelectActivity" src = "https://i.postimg.cc/HspJKvV4/huodong.jpg">
  </image>

  <view class="subTitle">Weekend x 鱼饼精选</view>
  <view class="container">
    <swiper
      class="card-swiper"
      duration="300"
      interval="5000"
      circular="{{true}}"
      indicator-dots="{{false}}"
      bindchange="onSelectSpecialActivity"
    >
      <block wx:for="{{cardList}}" wx:key="index">
        <swiper-item>
          <view class="card" style="z-index: {{cardList.length - index}}">
            <image class="card-image" src="{{item.image}}"></image>
            <view class="card-content">
              <text class="card-title">{{item.title}}</text>
              <text class="card-date">{{item.date}}</text>
              <view class="card-buttons">
                <view class="card-button">静心探寺</view>
                <view class="card-button">深度交流</view>
              </view>
              <view class="separator-horizon"></view>
              <view class="card-description">{{item.description}}</view>
              <view class="join-button">即刻加入</view>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
