
<scroll-view class = "main-page" type = "custom" scroll-y="true">
  <!--顶部状态栏-->
  <!-- <view class = "top-margin" style = "height:{{statusBarHeight}}px"> </view> -->
  <view style = "position: relative; width:100%;height:33vh;">
    <!-- <view class = "navigation-bar">welcome to YoPeer</view> -->
    <view class = "swiper-container">
      <t-swiper 
        current="{{1}}"
        autoplay="{{true}}"
        duration="{{500}}"
        interval="{{5000}}"
        list="{{swiperList}}"
        height = "25vh"
        navigation="{{ { type: 'dots-bar' } }}"
        class = "notice-swiper"
        bind:click = "onClickSwiper"
      />
    </view>
    <view class="notice-bar">
      <view class="user-info">
        <image src="{{userInfo.avatar}}" class="avatar" />
        <text>{{userInfo.name}}</text>
        <text>{{userInfo.university}}</text>
      </view>
      <view class="separator"></view>
      <view class="level-exp">
        <text>我的鱼饼等级：</text> 
        <text style="color: #fcad37;">{{userInfo.level}}</text>
        <view class="exp-bar-container">
          <view class="exp-bar" style="width: {{userInfo.exp}}%;"></view>
        </view>
        <text class="levelExpRmd">距离下一级还有：200</text>
      </view>
    </view>
  </view>
  
  <view class="subTitle">2024港校新生团购活动</view>
  <image class = "activity-cell-head" bindtap = "onSelectActivity" src = "cloud://yopeer-0g9zeq1439bcebc2.796f-yopeer-0g9zeq1439bcebc2-1326224258/小程序插画设计-1/团购活动入口海报-2.jpg">
  </image>

  <view class="subTitle">Weekend x 鱼饼精选</view>
  <t-swiper
    class="scale-card-theme"
    current="{{current}}"
    autoplay="{{autoplay}}"
    duration="{{duration}}"
    interval="{{interval}}"
    bindchange="onChange"
    navigation="{{ { type: 'dots' } }}"
    list="{{swiperList2}}"
    image-props="{{ { shape: 'round' } }}"
    previousMargin="34px"
    nextMargin="34px"
    height="60vh"
    t-class-nav="card-theme-nav"
    t-class-prev-image="scale-candidate"
    t-class-next-image="scale-candidate"
  />

  <view class="subTitle-2">Weekend x 周末活动</view>
  <view class="waterfall">
    <view class="column">

      <view class="activity-cell">
        <image class="activity-image" src="cloud://yopeer-0g9zeq1439bcebc2.796f-yopeer-0g9zeq1439bcebc2-1326224258/小程序插画设计-1/团购活动入口海报-2.jpg" mode="aspectFill"></image>
        <view class="activity-content">
          <text class="activity-title">云台寺精心禅修之旅</text>
          <text class="bubble">静心探寺 深度交流</text>
          <text class="activity-date">2024-06-23/南山区金地购物中心</text>
        </view>
      </view>

      <image class="activity-cell" src=""></image>
      <image class="activity-cell" src=""></image>
      <image class="activity-cell" src=""></image>
    </view>
    <view class="column">
      <image class="activity-cell" src=""></image>
      <image class="activity-cell" src=""></image>
      <image class="activity-cell" src=""></image>
      <image class="activity-cell" src=""></image>
    </view>
  </view>

  <!--<view style = "width:100vw;height: 15vh;"></view>-->
</scroll-view>