
<scroll-view class = "main-page" type = "custom">
  <!--顶部状态栏-->
  <view class = "top-margin" style = "height:{{statusBarHeight}}px"> </view>
  <view class = "navigation-bar"> 欢迎来到鱼饼</view>

  <t-swiper 
    current="{{1}}"
    autoplay="{{true}}"
    duration="{{500}}"
    interval="{{5000}}"
    list="{{swiperList}}"
    navigation="{{ { type: 'dots-bar' } }}"
  />

  <view class = "activity-cell" bindtap = "onSelectActivity">特别活动:港校新生团购</view>
</scroll-view>