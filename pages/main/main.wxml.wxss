/* pages/main/main.wxml.wxss */
/* 页面布局和基本样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f2f2f2;
}

/* 顶部导航栏样式 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #d2691e;
  color: white;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-icons {
  display: flex;
}

.nav-button {
  background: none;
  border: none;
  color: white;
  font-size: 36rpx;
  margin-left: 20rpx;
}

/* 顶部图片样式 */
.header-image {
  width: 100%;
  height: auto;
}

/* 功能按钮样式 */
.buttons-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx;
}

.button-item {
  width: 45%;
  background-color: #f08080;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  padding: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.button-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.button-subtext {
  font-size: 24rpx;
  color: #666;
}

/* 底部导航栏样式 */
.footer-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  background-color: #d2691e;
}

.footer-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

.footer-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 5rpx;
}

.footer-text {
  font-size: 24rpx;
}
