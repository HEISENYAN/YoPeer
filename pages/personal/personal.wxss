/* School */
.pickerView {
  padding: 6px;
  background-color: #f8f8f8;
  border-radius: 1px;
  margin-bottom: 10px;
}

.footer__version {
  text-align: center;
  margin-top: 10%;
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
}

.block {
  color: var(--td-text-color-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
}
.block--bottom {
  width: 100vw;
  height: 240px;
}
.grid-container{
  width:92vw;
  height:auto;
  background-color: white;
  margin-left:4vw;
  border-radius: 10px;
  margin-top:-7vh;
  display: flex;
  box-sizing: border-box;
  padding:20rpx;
  justify-content: space-between;
}
.icon-container{
  height: auto;
  background-color: rgb(240, 95, 95);
  flex-basis: 22%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.icon-image {
  background-color: #8a91e0;
  width: 60rpx;
  height: 60rpx;
  /* margin-bottom: 10rpx; */
}


.calendar-container{
  height: auto;
  background-color: white;
  width:92vw;
  margin-left: 4vw;
  box-sizing: border-box;
  margin-top:3vh;
  padding:20rpx;
  border-radius: 10px;
}
.calendar{
  --calendar-selected-day-color:black;
  --calendar-height:40vh;
}
.popup-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background-color: #ffffff;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20px;
}
.popup-title {
  font-size: 18px;
  font-weight: bold;
}
.popup-content {
  margin-top: -20px !important;
  font-size: 16px;
  margin-bottom: 20px;
  text-align: center;
}
.checkout-button {
  width: 240px;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #007aff;
  color: #fff;
}
.close-btn {
  cursor: pointer;
}