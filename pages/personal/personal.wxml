      <view class="title">我的学校: {{pickerOptions[selectedIndex]}}</view>
      <view class="detail2">
        <text>></text>
      </view>
    </view>
  </picker>
  </view>

  <view class="line"></view>
  <view class='item' hover-class="pressStyle" bindtap = "getAddressList">
    <view class="title">收货地址</view>
    <view class="detail2">
      <text>></text>
    </view>
  </view>
  <view class="line"></view>
  <view class='item' hover-class="pressStyle">
    <view class="title">我的订单</view>
    <view class="detail2">
      <text>></text>
    </view>
  </view>
  <view class="line"></view>
  <view class='item' hover-class="pressStyle">
    <view class="title">我的帖子</view>
    <view class="detail2">
      <text>></text>
    </view>
  </view>
  <view class="line"></view>
  <view class='item' hover-class="pressStyle">
    <view class="title">我的收藏</view>
    <view class="detail2">
      <text>></text>
    </view>
  </view>
  <view class="hr"></view>
  <view class="item" hover-class="pressStyle">
    <view class="title">设置</view>
    <view class="detail2">
      <text> ></text>
    </view>
  </view>
  <view class="line"></view>
  <view class="item" hover-class="pressStyle">
    <view class="title">鱼饼服务站</view>
    <view class="detail2">
      <text> ></text>
    </view>
  </view>

  <view class="hr"></view>
</view>
