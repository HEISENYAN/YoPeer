<view class = "personal">
  <view class = "loginBar" open-type = "getUserInfo" bindtap = "getUserProfile" >
    <image class = "loginImg" src ="{{avatarUrl}}"></image>
    <!-- <image class = "loginImg" src ="../../icons/portrait.png"></image> -->
    <text style ="width:200rpx;height:200rpx;display:inline-block;font-size:40rpx;">{{nickname}}</text> 
    <!-- <text>nickname: {{nickname}}</text> -->
  </view>
</view>

<view style="left: 25rpx;">
  <view class="hr"></view>
  <view class="item" hover-class="pressStyle">
    <view class="title">我的鱼饼值：{{yoPeerValue}}</view>
    <view class="detail2">
      <text> ></text>
    </view>
  </view>
  <view class="line"></view>
  <view class="item" hover-class="pressStyle" bindtap = "getUserProfile">
    <view class="title">个人资料</view>
    <view class="detail2">
      <text> ></text>
    </view>
  </view>
  <view class="line"></view>
  <view>
    <picker mode="selector" range="{{pickerOptions}}" value="{{selectedIndex}}" bindchange="onPickerChange" hidden="{{!isPickerShown}}">
