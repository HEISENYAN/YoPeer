  <view class = "personal-cell" style = "height: 450rpx;">
    <view style = "display: flex;">
      <view style = "width:3vw"></view>
      <view style = "width:13vw;display:flex;justify-content:start;align-items:center;">用户名</view>
      <view style = "width:77vw;"><t-input name="nickname" style = "--td-input-border-radius: @radius-large" borderless="{{true}}" maxlength="{{20}}" placeholder="请填写用户" value="{{nickname}}" bindchange="onFormChange" type="nickname" bindnicknamereview="nickNameReview"> 
      </t-input></view>
    </view>
    <view style = "display: flex;">
      <view style = "width:3vw"></view>
      <view style = "width:13vw;display:flex;justify-content:start;align-items:center;">手机号</view>
      <view style = "width:20vw;display:inline-block"><t-cell title="{{phoneAreaText}}" arrow bind:click="onSelectArea" bordered = "{{false}}" bind:click="onPhoneAreaPicker" /></view>
      <view style = "width: 57vw;"><t-input name="phoneNum"  placeholder="{{phoneNum}}" value="{{phoneNum}}" type = "number" maxlength = "{{maxphonenum}}" borderless="{{true}}"  bindchange="onFormChange"></t-input></view>
    </view>
    <view style = "display: flex;">
      <view style = "width:3vw"></view>
      <view style = "width:13vw;display:flex;justify-content:start;align-items:center;">微信号</view>
      <view style = "width:77vw;"><t-input style = "--td-input-border-radius: @radius-large" borderless="{{true}}" maxlength="{{20}}" placeholder="选填，让我们方便联系" name="wechatID" type = "text" value="{{wechatID}}" bindchange="onFormChange"> 
      </t-input></view>
    </view>
    <view style = "display: flex; border-radius: 10px; margin-top: -5rpx;">
      <t-cell class="mb-16" title="学校" arrow hover note="{{schoolText}}" bordered="{{false}}" style="border-radius: 10px;" bind:click="onSchoolPicker" />
    </view>
  </view>
  <!-- 手机区号 -->
  <t-picker  
    visible="{{phoneAreaVisible}}"
    value="{{phoneAreaValue}}"
    data-key="phoneArea"
    title="选择区号"
    cancelBtn="取消"
    confirmBtn="确认"
    usingCustomNavbar
    bindchange="onPickerChange"
    bindcancel="onPickerCancel"
    bindpick="onColumnChange"
  >
    <t-picker-item options="{{areas}}" />
  </t-picker>
  
  <!-- 学校 -->
  <t-picker
      visible="{{schoolVisible}}"
      value="{{schoolValue}}"
      data-key="school"
      title="选择学校"
      cancelBtn="取消"
      confirmBtn="确认"
      usingCustomNavbar
      bindchange="onPickerChange"
      bindpick="onColumnChange"
      bindcancel="onPickerCancel"
    >
    <t-picker-item options="{{citys}}" /></t-picker>
