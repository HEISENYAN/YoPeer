.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  height: 56px;
  /* border-radius: 8px; */
  margin-top: 40px;
  margin-bottom: 40px;
}
.avatar {
  display: block;
  width: 56px;
  height: 56px;
}
.container {
  display: flex;
}
.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}
.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.input-example {
  margin: 0 32rpx;
}
.suffix--line {
  width: 1px;
  height: 24px;
  background-color: var(--td-component-stroke, #f3f3f3);
  margin-right: 16px;
}
.verify {
  color: var(--td-brand-color, #0052D9);
  font-size: 32rpx;
}
.mb-16 {
  margin-bottom: 32rpx;
}