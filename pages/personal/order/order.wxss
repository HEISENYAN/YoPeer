page {
  background-color: #f5f5f5;
}
.activity-cell{
  background-color: rgb(152, 183, 212);
  height: 20vh;
  width: 92vw;
  box-sizing:border-box;
  margin-left:4vw;
  margin-top: 3vh;
  
  display:flex;
  /* justify-content: center;
  align-items: center; */
}

.border{
  border-radius: 10px;
}

.shopping-item{
  height: 200rpx;
  background-color:white;
  width:92%;
  display:flex;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  margin-left: 4%;
  border-radius: 10px;
}
.shopping-image{
  height:200rpx;
  width:200rpx;
  background-color: transparent;
  display:inline-block;
  box-sizing: border-box;
  padding-left: 10rpx;
  padding-top: 10rpx;
  vertical-align:top;
}
.shopping-info-container{
  display:inline-block;
  height:200rpx;
  width:200rpx;
  box-sizing: border-box;
  background-color: white;
  padding-top: 5rpx;

}
.shopping-item-title{
  overflow: hidden;
  font-size: 25rpx;
  display:-webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}